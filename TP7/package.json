{
  "name": "lifweb",
  "version": "1.0.0",
  "description": "Projet de d√©part Node.js (http-health)",
  "main": "http-health.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon http-health.js",
    "prod": "cross-env NODE_ENV=production node http-health.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "email": "romuald.thion@univ-lyon1.fr",
    "name": "Romuald THION"
  },
  "license": "ISC",
  "type": "module",
  "keywords": [
    "javascript",
    "education",
    "licence",
    "informatique",
    "UCBL"
  ],
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "nodemon": "^3.0.2"
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "proseWrap": "preserve",
    "printWidth": 100,
    "bracketSpacing": true,
    "quoteProps": "consistent",
    "tabWidth": 2,
    "semi": true
  },
  "nodemonConfig": {
    "ext": "js",
    "signal": "SIGHUP"
  },
  "eslintConfig": {
    "env": {
      "es2024": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "unicorn"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended",
      "plugin:import/recommended",
      "plugin:promise/recommended",
      "prettier"
    ],
    "rules": {
      "no-var": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "args": false
          }
        }
      ]
    }
  }
}
